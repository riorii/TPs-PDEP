import TP_SegundaParte.*
describe "Test de Segunda Parte" {
	// Personajes
	var joaquin
	var lucia
	var kike
	var soledad
	// Canciones
	var laFamilia
	var eres
	var corazon_americano
	var cisne
	var alma_de_diamante
	var crisantemo
	//Albumes
	var especialLaFamilia
	var laSole
	var paraLosArboles
	var justCrisantemo
	
	fixture {
